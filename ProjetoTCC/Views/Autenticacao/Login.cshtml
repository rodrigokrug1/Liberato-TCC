@model ProjetoTCC.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<head>
    <link href="~/Content/signin.css" rel="stylesheet">
</head>
<body class="text-center">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-signin">
            <img class="mb-4" src="~/img/logoS.png" alt="" width="189" height="210">
            <h2>Faça login</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.UrlRetorno)

            <div class="form-group">
                <div class="col">
                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { placeholder = "Usuario", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col">
                    @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { placeholder = "Senha", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col">
                    <input type="submit" value="Entrar" class="btn btn-lg btn-dark btn-block" />
                    <p class="mt-5 mb-3 text-muted"><p>&copy; @DateTime.Now.Year - VS Valesoft</p>
                </div>
            </div>
        </div>
    }
</body>